# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/violence_detection
DB_HOST=localhost
DB_PORT=5432
DB_NAME=violence_detection
DB_USER=postgres
DB_PASSWORD=postgres

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# AWS S3 Configuration (or CloudFlare R2)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=violence-detection-videos

# Application Configuration
NODE_ENV=development
PORT=3000
AI_SERVICE_URL=http://localhost:8001

# Frontend Configuration
VITE_API_URL=http://localhost:3000
VITE_WS_URL=ws://localhost:3000

# AI Service Configuration
MODEL_PATH=./models
CONFIDENCE_THRESHOLD=0.7
FRAME_EXTRACTION_INTERVAL=1

# File Upload Configuration
MAX_FILE_SIZE=500000000  # 500MB in bytes
ALLOWED_VIDEO_FORMATS=mp4,avi,mov,mkv

# Security Configuration
CORS_ORIGIN=http://localhost:5173
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100